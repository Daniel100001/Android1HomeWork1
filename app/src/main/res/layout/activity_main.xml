<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
       
        android:layout_marginTop="100dp"
        android:id="@+id/editText"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:hint="@string/Nomber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/whatsappbro"
        android:scaleType="centerCrop"
        android:background="#0EA590"
        app:layout_constraintEnd_toEndOf="@id/editText"
        app:layout_constraintStart_toStartOf="@id/editText"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/editText1"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="@string/search"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="@id/button"
        app:layout_constraintEnd_toEndOf="@id/button" />


    <ImageButton
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:contentDescription="@string/Nomber"
        android:scaleType="centerCrop"
        android:src="@drawable/google"
        app:layout_constraintEnd_toEndOf="@id/editText1"
        app:layout_constraintStart_toStartOf="@id/editText1"
        app:layout_constraintTop_toBottomOf="@id/editText1" />

    <ImageView
        android:src="@drawable/image_ic"
        android:id="@+id/ic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:contentDescription="@string/search"
        android:src="@drawable/gallery"
        android:scaleType="centerCrop"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/ic"
        app:layout_constraintStart_toStartOf="@id/ic"
        app:layout_constraintTop_toBottomOf="@id/ic" />


</androidx.constraintlayout.widget.ConstraintLayout>